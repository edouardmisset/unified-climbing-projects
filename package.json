{
  "name": "climbing-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "backup": "NEXT_PUBLIC_CONVEX_URL=https://watchful-platypus-57.convex.cloud bun run src/scripts/backup-from-db.ts && bun run format ./src/backup",
    "preseed": "bun run backup",
    "seed": "bunx convex import --replace --table ascents ./src/backup/ascent-data.json && bunx convex import --replace --table training ./src/backup/training-data.json",
    "seed:prod": "bunx convex import --prod --replace --table ascents ./src/backup/ascent-data.json && bunx convex import --prod --replace --table training ./src/backup/training-data.json",
    "format": "oxfmt ./src",
    "lint": "oxlint --type-aware --fix ./src",
    "check": "bun run lint && bun run format && bun run style:lint && tsgo --noEmit && ls-lint",
    "commitlint": "commitlint --edit",
    "dev": "next dev --turbo",
    "convex:dev": "bunx convex dev",
    "convex:dashboard": "open -a \"Brave Browser\" \"https://dashboard.convex.dev/t/edouard-6ac94/unified-climbing-app/small-monitor-700\"",
    "preview": "bun run build && next start",
    "reset": "rm -rf node_modules bun.lock* && bun install --save-text-lockfile",
    "spell": "cspell lint --no-progress --show-suggestions --show-context --locale 'en,fr' ./src/**/*.ts*",
    "start": "next start",
    "style:lint": "stylelint --fix --cache 'src/**/*.css'",
    "test:unit": "bun run test:unit:watch run",
    "test:unit:watch": "bun vitest --reporter=dot",
    "test:unit:ui": "bun run test:unit:watch --ui",
    "test:unit:silent": "bun run test:unit --silent=passed-only",
    "test:e2e": "bun run playwright test",
    "test:e2e:ui": "bun run test:e2e --ui",
    "test:all": "bun run test:unit:silent & bun run test:e2e",
    "knip": "clear && knip",
    "ls-lint": "ls-lint",
    "validate": "clear && bun run check && bun run test:all && bun run build"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@clerk/nextjs": "^6.38.1",
    "@clerk/themes": "^2.4.55",
    "@edouardmisset/array": "npm:@jsr/edouardmisset__array@^4.0.3",
    "@edouardmisset/date": "npm:@jsr/edouardmisset__date@^4.2.0",
    "@edouardmisset/math": "npm:@jsr/edouardmisset__math@^4.0.0",
    "@edouardmisset/object": "npm:@jsr/edouardmisset__object@^4.0.1",
    "@edouardmisset/text": "npm:@jsr/edouardmisset__text@^4.1.0",
    "@std/text": "npm:@jsr/std__text@^1.0.17",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "convex": "^1.32.0",
    "convex-helpers": "^0.1.113",
    "google-auth-library": "^10.5.0",
    "google-spreadsheet": "^5.0.2",
    "humanize-duration": "^3.33.2",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "next-view-transitions": "^0.3.5",
    "nuqs": "^2.8.8",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.2",
    "react-toastify": "^11.0.5",
    "recharts": "^3.7.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@ls-lint/ls-lint": "^2.3.1",
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/humanize-duration": "^3.27.4",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260221.1",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "4.0.18",
    "cspell": "^9.6.4",
    "jsdom": "^28.1.0",
    "knip": "^5.84.1",
    "oxfmt": "0.34.0",
    "oxlint": "1.49.0",
    "oxlint-tsgolint": "^0.14.2",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "vitest": "^4.0.18"
  },
  "ct3aMetadata": {
    "initVersion": "7.38.1"
  },
  "trustedDependencies": [
    "oxfmt",
    "oxlint",
    "@clerk/shared",
    "@vercel/speed-insights",
    "core-js",
    "esbuild",
    "oxc-resolver",
    "protobufjs",
    "sharp"
  ]
}
