{
  "name": "climbing-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "backup": "NEXT_PUBLIC_CONVEX_URL=https://watchful-platypus-57.convex.cloud bun run src/scripts/backup-from-db.ts && biome format --write ./src/backup",
    "preseed": "bun run backup",
    "seed": "bunx convex import --replace --table ascents ./src/backup/ascent-data.json && bunx convex import --replace --table training ./src/backup/training-data.json",
    "seed:prod": "bunx convex import --prod --replace --table ascents ./src/backup/ascent-data.json && bunx convex import --prod --replace --table training ./src/backup/training-data.json",
    "format": "bunx --bun biome format --write ./src",
    "lint": "bunx --bun biome lint --write ./src && bun run eslint",
    "eslint": "eslint --cache --fix ./src",
    "check": "bunx --bun biome check --fix ./src && bun run eslint && bun run style:lint && tsc --noEmit && ls-lint",
    "commitlint": "commitlint --edit",
    "dev": "next dev --turbo",
    "convex:dev": "bunx convex dev",
    "convex:dashboard": "open -a \"Brave Browser\" \"https://dashboard.convex.dev/t/edouard-6ac94/unified-climbing-app/small-monitor-700\"",
    "preview": "bun run build && next start",
    "reset": "rm -rf node_modules bun.lock* && bun install --save-text-lockfile",
    "spell": "cspell lint --no-progress --show-suggestions --show-context --locale 'en,fr' ./src/**/*.ts*",
    "start": "next start",
    "style:lint": "stylelint --fix --cache 'src/**/*.css'",
    "test:unit": "bun run test:unit:watch run",
    "test:unit:watch": "bun vitest --reporter=dot",
    "test:unit:ui": "bun run test:unit:watch --ui",
    "test:e2e": "bun run playwright test",
    "test:e2e:ui": "bun run test:e2e --ui",
    "test:all": "bun run test:unit && bun run test:e2e",
    "knip": "clear && knip",
    "ls-lint": "ls-lint",
    "validate": "clear && bun run check && bun run test:all && bun run build",
    "repo": "bun run repomix"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-rc.0",
    "@clerk/nextjs": "^6.35.6",
    "@clerk/themes": "^2.4.41",
    "@edouardmisset/array": "npm:@jsr/edouardmisset__array@^4.0.3",
    "@edouardmisset/date": "npm:@jsr/edouardmisset__date@^4.2.0",
    "@edouardmisset/math": "npm:@jsr/edouardmisset__math@^4.0.0",
    "@edouardmisset/object": "npm:@jsr/edouardmisset__object@^4.0.1",
    "@edouardmisset/text": "npm:@jsr/edouardmisset__text@^4.1.0",
    "@nivo/bar": "^0.88.0",
    "@nivo/core": "^0.88.0",
    "@nivo/line": "^0.88.0",
    "@nivo/pie": "^0.88.0",
    "@std/text": "npm:@jsr/std__text@^1.0.16",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@trpc/client": "^11.7.2",
    "@trpc/react-query": "^11.7.2",
    "@trpc/server": "^11.7.2",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "convex": "^1.31.0",
    "convex-helpers": "^0.1.107",
    "fuzzysort": "^3.1.0",
    "google-auth-library": "^10.5.0",
    "google-spreadsheet": "^5.0.2",
    "humanize-duration": "^3.33.1",
    "lucide-react": "^0.548.0",
    "next": "^16.0.10",
    "next-view-transitions": "^0.3.5",
    "nuqs": "^2.8.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-toastify": "^11.0.5",
    "server-only": "^0.0.1",
    "superjson": "^2.2.6",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@ls-lint/ls-lint": "^2.3.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/humanize-duration": "^3.27.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "4.0.5",
    "cspell": "^9.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^6.1.1",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "repomix": "^1.9.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "ct3aMetadata": {
    "initVersion": "7.38.1"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@clerk/shared",
    "@vercel/speed-insights",
    "core-js",
    "esbuild",
    "oxc-resolver",
    "protobufjs",
    "sharp"
  ]
}
